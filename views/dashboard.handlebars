<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.84.0">
  <title>MVC Technology Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="./css/style.css">
  <link href="https://fonts.googleapis.com/css?family=Playfair&#43;Display:700,900&amp;display=swap" rel="stylesheet">

</head>
<section class="vh-100 ">
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12">
        <div class="card bg-secondary text-warning" style="border-radius: 1rem;">
          <div class="card-body text-center">
            <div>
              <h1 class="logo">Create New Post</h1>
              <p class="text-white-50 mb-5">Please enter your post information.</p>
              <div class="form-outline form-white mb-4">
                <input type="text" id="post-title" class="form-control form-control-lg " />
                <label class="form-label" for="post-title">Title</label>
              </div>
              <div class="form-outline form-white mb-4">
                <textarea class="form-control" id="post-text" rows="2"></textarea>
                <label class="form-label" for="post-text">Post Text</label>
              </div>
              <button id="postBtn" class="postBtn btn btn-outline-warning btn-lg px-5" type="submit">Post it!</button>
            </div>
          </div>
        </div>
        {{#if blogs.length}}
        <section>
          <h2>Your Previous Posts</h2>
          <ol>
            {{#each blogs as |blog|}}
            <li>
              {{> post-info blog}}
              <!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> -->
            </li>
            {{/each}}
          </ol>
        </section>
        {{/if}}
      
      </div>
    </div>
  </div>
  
  <script src="./js/newPost.js"></script>
</section>